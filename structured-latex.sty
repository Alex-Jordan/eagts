% Preface "preface"
%
\newenvironment{preface}%
{\chapter*{Preface}\addcontentsline{toc}{chapter}{Preface}}%
{}%
%
% Chapter "chap" 1=title
%
\newenvironment{chap}[1]%
{\chapter{#1}}%
{}%
